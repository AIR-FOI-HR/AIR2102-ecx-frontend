<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WienerbergerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wienerberger_red</item>
        <item name="colorPrimaryVariant">@color/wienerberger_red_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wienerberger_black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Defaults stop here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Our global styles -->

    <style name="button_general" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">25sp</item>
        <item name="android:width">175sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="button_centered" parent="@style/button_general">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="button_grey" parent="@style/button_general">
        <item name="android:background">@drawable/rounded_button_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_red" parent="@style/button_general">
        <item name="android:background">@drawable/rounded_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_grey_centered" parent="@style/button_centered">
        <item name="android:background">@drawable/rounded_button_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_red_centered" parent="@style/button_centered">
        <item name="android:background">@drawable/rounded_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_general" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">48dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="srcCompat">@drawable/ic_logo_wienerberger_cbme</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toTopOf">parent</item>
        <item name="android:contentDescription">@string/logo_image_description</item>
    </style>

    <style name="ev_general" parent="@android:style/Widget.EditText">

    </style>

    <style name="menu_item_typeface">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>

</resources>