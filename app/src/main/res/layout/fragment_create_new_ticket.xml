<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="createSupportTicketsViewModel"
                type="com.ecxfoi.wbl.wienerbergerfrontend.ui.main.supporttickets.CreateSupportTicketsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createNewTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main.supporttickets.CreateSupportTicketsFragment">


        <TextView
                style="@style/tv_general"
                android:id="@+id/createNewTicketTitle"
                android:text="@string/create_new_ticket"
                android:textAlignment="center"

                android:textSize="32sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="58dp"
                tools:layout_editor_absoluteX="-16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.06" />

        <EditText
                android:id="@+id/subject"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="Subject"
                android:inputType="text"
                android:selectAllOnFocus="true"
                app:layout_constraintTop_toBottomOf="@id/createNewTicketTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/messageCreateNewTicket"

                android:layout_width="350dp"
                android:layout_height="250dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/subject"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="50dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Message"
                    app:hintTextAppearance="?attr/textAppearanceCaption"
                    android:gravity="start"

                    android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:constraint_referenced_ids="btnCancel, btnAddTicket"
                app:flow_horizontalAlign="start"
                app:flow_horizontalBias="0"
                app:flow_maxElementsWrap="2"
                app:flow_wrapMode="aligned"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/messageCreateNewTicket"
                app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
                style="@style/button_grey"
                android:background="@drawable/rounded_button_grey"
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:layout_marginBottom="20dp" />

        <androidx.appcompat.widget.AppCompatButton
                style="@style/button_red"
                android:id="@+id/btnAddTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_ticket"
                android:layout_marginBottom="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>